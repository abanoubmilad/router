<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_github_chrome_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="show github link on chrome tab" />

    <Button
        android:id="@+id/btn_github_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="show github link uri" />

    <Button
        android:id="@+id/btn_play_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show app on play store" />

    <Button
        android:id="@+id/btn_open_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open another activity" />


    <Button
        android:id="@+id/btn_open_activity_for_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open another activity for result" />
</LinearLayout>